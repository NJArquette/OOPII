
import java.util.Scanner;

public class Main {

    public static void main(String args[]) {

        System.out.println("Please enter the length of one side of the square.");
        Scanner sc = new Scanner(System.in);
        Double side = sc.nextDouble();
        System.out.println("Enter 1 for Area or 2 for Volume.");
        int determine = sc.nextInt();
        if (determine == 1) {
            System.out.println("The area of the square is: ");
            System.out.print(Square(side, side));
            }
        else {
            System.out.println("The Volume of the square is ");
            System.out.print(Square(side, side, side));}
    }



    private static double Square(double a, double b) {

        return a * b;
    }

    private static double Square(double a, double b, double c) {

        return a * b* c;
        }
    }

